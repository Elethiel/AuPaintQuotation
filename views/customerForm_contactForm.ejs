<div id="addPersonDiv" class="hide">
    <form class="form-horizontal" id="contactForm" role="form" action="/customerUpdateContact" method="post"
        data-bv-feedbackicons-valid="glyphicon glyphicon-ok"
        data-bv-feedbackicons-invalid="glyphicon glyphicon-remove"
        data-bv-feedbackicons-validating="glyphicon glyphicon-refresh">

    <input type="hidden" name="ctcPersonId" id="ctcPersonId" value="">
    
    <% if (srv.Obj && srv.Obj.customerId) { %>
        <input type="hidden" name="customerId" id="customerId" value="<%= srv.Obj.customerId %>">
    <% } %>

    <p id="ctcPersonTitle" class="highlight">Contact</p>
    <% var o = { index: "50", gender: 1, label: "Civilité", field: "ctcPersonGender", tooltip: "M. et Mr sont équivalents (Monsieur), Mme (Madame), Mlle n'est officiellement plus utilisable (Mademoiselle), et Autre permet de ne rien mettre en terme de civilité sur les factures (si vous n'avez par exemple qu'un prénom à mettre).", labelw: "4", inputw: "7", value: "" } %>
    <% include form/inputSelectPersonGender %>
    <% include form/inputSelect %>
    <% var o = { index: "51", label: "Prénom", field: "ctcPersonFirstname", labelw: "4", inputw: "7", value: "" } %>
    <% include form/inputText %>
    <% var o = { index: "52", label: "Nom", field: "ctcPersonLastname", labelw: "4", inputw: "7", value: "" } %>
    <% include form/inputText %>
    &nbsp;<br/>
    <p class="midlight">Contact de la personne</p>
    <% var o = { index: "53", label: "Téléphone", field: "ctcPersonContactTel", placeholder: "xx.xx.xx.xx.xx", labelw: "4", inputw: "7", value: "" } %>
    <% include form/inputTel %>
    <% var o = { index: "54", label: "Mobile", field: "ctcPersonContactMobile", placeholder: "xx.xx.xx.xx.xx", labelw: "4", inputw: "7", value: "" } %>
    <% include form/inputTel %>
    <% var o = { index: "55", label: "Fax", field: "ctcPersonContactFax", placeholder: "xx.xx.xx.xx.xx", labelw: "4", inputw: "7", value: "" } %>
    <% include form/inputTel %>
    <% var o = { index: "56", label: "Email", field: "ctcPersonContactMail", labelw: "4", inputw: "7", value: "" } %>
    <% include form/inputMail %>
    &nbsp;<br/>
    <button type="submit" class="btn btn-primary">
        Enregistrer
    </button>
</div>