<div class="form-group">
    <label for="<%= o.field %>" class="col-sm-<%= o.labelw %> control-label"><%= o.label %>
        <% if (o.tooltip) { %>
        <a href="#" data-placement="bottom" tabindex="-1"
            data-tooltip="<%= o.tooltip %>">
            <span class="glyphicon glyphicon-info-sign"></span></a>
        <% } %>
    </label>
    <div class="col-sm-<%= o.inputw %>">
        <input tabindex="<%= o.index %>" class="form-control" name="<%= o.field %>" <% if (o.placeholder) { %>placeholder="<%= o.placeholder %>"<% } %> id="<%= o.field %>" type="text"
            <% if (o.value) { %> value="<%= o.value %>" <% } %>
                trigger="keyup blur"
                data-bv-regexp="true"
                data-bv-regexp-regexp="^[0-9]*$"
                data-bv-regexp-message="<%= o.label %> doit Ãªtre un nombre entier"
            <% if (o.empty) { %>
                data-bv-notempty="true"
                data-bv-notempty-message="<%= o.empty %>"
            <% } %>
            >
    </div>
</div>