<div class="form-group">
    <label for="<%= o.field %>" class="col-sm-<%= o.labelw %> control-label"><%= o.label %>
        <% if (o.tooltip) { %>
        <a href="#" data-placement="bottom" tabindex="-1"
            data-tooltip="<%= o.tooltip %>">
            <span class="glyphicon glyphicon-info-sign"></span></a>
        <% } %>
    </label>
    <div class="col-sm-<%= o.inputw %>">
        <input tabindex="<%= o.index %>" class="form-control <%= o.cls %>" name="<%= o.field %>" id="<%= o.field %>" <% if (o.placeholder) { %>placeholder="<%= o.placeholder %>"<% } %> type="text"
                <% if (o.value) { %> value="<%= o.value %>" <% } %>
                trigger="blur"
            data-bv-emailaddress="true"
            data-bv-emailaddress-message="Le mail n'est pas valide !"
            >
    </div>
</div>