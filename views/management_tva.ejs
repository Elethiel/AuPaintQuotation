<div class="row text-center">
    <button type="button" id="addTVA" class="btn btn-primary">Ajouter un type de TVA</button>
</div>
&nbsp;<br/>
<small class="help">La TVA est utilis√©e sur les familles de produits afin de calculer au mieux les devis/factures.</small><br/>
&nbsp;<br/>
<div class="row">
    <input type="hidden" id="maxTVA" value="<%= srv.TVAList.length %>" />
    <table id="TVAtab" class="stripe hover cell-border row-border" cellspacing="0" width="100%">
        <thead>
            
            <tr>
                <th>#</th>
                <th>TVA</th>
                <th>%</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
 
        <tbody>
            <% if (srv.TVAList.length > 0) { %>
                <% for(var i = 0; i < srv.TVAList.length; i++) { %>
                    <tr>
                        <td id="idTVA<%= i %>"><%= srv.TVAList[i].TVAId %></td>
                        <td id="labelTVA<%= i %>"><%= srv.TVAList[i].TVALabel %></td>
                        <td><%= srv.TVAList[i].TVAPercent %></td>
                        <td><a href="/tva?TVAId=<%= srv.TVAList[i].TVAId %>"><span class="glyphicon glyphicon-pencil"></span></a> 
                            <a id="delTVA<%= i %>" href="#<%= i %>"><span class="glyphicon glyphicon-remove text-danger"></span></a></td>
                    </tr>
                <% } %>
            <% } %>
        </tbody>
    </table>
</div>
