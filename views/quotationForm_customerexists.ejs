<!-- the chosen one -->
<div class="form-group text-center">
    <input type="hidden" name="quotationSelectedCustomerId" id="quotationSelectedCustomerId" value=0 />
    <label for="quotationSelectedCustomer" class="col-sm-4 control-label">
        Client Choisi
    </label>
    <div class="col-sm-7 text-left">
        <div class="input-group">
            <span class="form-control" id="quotationSelectedCustomer"></span>
            <span class="input-group-addon"><a href="#" class="hide" id="unselectCust"><span class="red glyphicon glyphicon-remove-sign"></span></a></span>
